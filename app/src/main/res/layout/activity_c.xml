<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityC">

    <ImageView
        android:id="@+id/pic_cont"
        android:layout_width="373dp"
        android:layout_height="243dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/prof_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059"
        app:srcCompat="@drawable/prof_pic"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="284dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:text="Regan Wagner"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#0A0A0A"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pic_cont"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/pic_cont"
        app:layout_constraintTop_toBottomOf="@+id/pic_cont"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/text_track"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="284dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:text="Track : Android "
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#0A0A0A"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pic_cont"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/pic_cont"
        app:layout_constraintTop_toBottomOf="@+id/text_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_slack_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="284dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:text="Slack Username : @Regan Wagner"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#0A0A0A"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pic_cont"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pic_cont"
        app:layout_constraintTop_toBottomOf="@+id/text_phone"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="284dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:text="Email : reganyoungstawagner@gmail.com"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#0A0A0A"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pic_cont"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pic_cont"
        app:layout_constraintTop_toBottomOf="@+id/text_country"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="284dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:text="Country : South Africa"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#0A0A0A"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pic_cont"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pic_cont"
        app:layout_constraintTop_toBottomOf="@+id/text_track"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="284dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:text="Phone number: 0792373517"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#0A0A0A"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pic_cont"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pic_cont"
        app:layout_constraintTop_toBottomOf="@+id/text_email"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>